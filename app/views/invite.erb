<h2>
  Invite players
</h2>

<form
  method="post"
  accept-charset="utf-8"
  action="/invite"
>
  <fieldset>
    <label
      for="invite_email"
    >
      Player email address
    </label>
    <input
      type="text"
      name="invite_email"
      placeholder="test@example.com"
    >
  </fieldset>
  <button type="submit">Invite Player</button>
</form>
