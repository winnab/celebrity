<form
  method="POST"
  action="/game_overview"
>
  <h2>Create a game</h2>
  <p>Required fields are followed by <strong><abbr title="required">*</abbr></strong>.</p>

  <fieldset>
    <legend>Enter your details</legend>
    <label
      for="creator_name"
    >
      Your name
      <strong><abbr title="required">*</abbr></strong>
      <input
        type="text"
        name="creator_name"
        id="creator_name"
        placeholder="Enter your name"
      >
    </label>

    <label
      for="creator_email"
    >
      Your email address
      <strong><abbr title="required">*</abbr></strong>
      <input
        type="email"
        name="creator_email"
        id="creator_email"
        placeholder="test@example.com"
      >
    </label>
  </fieldset>

  <fieldset>
    <legend>Your Clues <strong><abbr title="required">*</abbr></strong></legend>

    <label
      class="clue-label"
      for="clue_1"
    >
      Clue 1
    </label>
    <input
      type="text"
      name="clue_1"
      placeholder="Clue 1"
    >

    <label for="clue_2"
      class="clue-label"
    >
      Clue 2
    </label>
    <input
      type="text"
      name="clue_2"
      placeholder="Clue 2"
    >

    <label for="clue_3"
      class="clue-label"
    >
      Clue 3
    </label>
    <input
      type="text"
      name="clue_3"
      placeholder="Clue 3"
    >

    <label for="clue_4"
      class="clue-label"
    >
      Clue 4
    </label>
    <input
      type="text"
      name="clue_4"
      placeholder="Clue 4"
    >

    <label for="clue_5"
      class="clue-label"
    >
      Clue 5
    </label>
    <input
      type="text"
      name="clue_5"
      placeholder="Clue 5"
    >
  </fieldset>

  <fieldset>
    <legend>Invite friends</legend>
    <label
      for="friend_1"
    >
      Friend Address
      <strong><abbr title="required">*</abbr></strong>
      <input
        type="text"
        name="friend_1"
        id="friend_1"
        placeholder="Enter your name"
      >
    </label>

    <label
      for="friend_2"
    >
      Friend Address
      <strong><abbr title="required">*</abbr></strong>
      <input
        type="text"
        name="friend_2"
        id="friend_2"
        placeholder="Enter your name"
      >
    </label>

    <label
      for="friend_3"
    >
      Friend Address
      <strong><abbr title="required">*</abbr></strong>
      <input
        type="text"
        name="friend_3"
        id="friend_3"
        placeholder="Enter your name"
      >
    </label>

    <label
      for="friend_4"
    >
      Friend Address
      <strong><abbr title="required">*</abbr></strong>
      <input
        type="text"
        name="friend_4"
        id="friend_4"
        placeholder="Enter your name"
      >
    </label>

    <label
      for="friend_5"
    >
      Friend Address
      <strong><abbr title="required">*</abbr></strong>
      <input
        type="text"
        name="friend_5"
        id="friend_5"
        placeholder="Enter your name"
      >
    </label>
  </fieldset>
  <button type="submit">
    Create Game!
  </button>
</form>
