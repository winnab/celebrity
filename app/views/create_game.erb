<form
  method="POST"
  action="/game_overview"
>
  <h2>Create a game</h2>
  <p>Required fields are followed by <strong><abbr title="required">*</abbr></strong>.</p>

  <fieldset>
    <legend>Enter your details</legend>
    <label
      for="creator_name"
    >
      Your name
      <strong><abbr title="required">*</abbr></strong>
      <input
        type="text"
        name="creator_name"
        id="creator_name"
        placeholder="Enter your name"
      >
    </label>
    
    <label
      for="creator_email"
    >
      Your email address
      <strong><abbr title="required">*</abbr></strong>
      <input
        type="email"
        name="creator_email"
        id="creator_email"
        placeholder="test@example.com"
      >
    </label>
  </fieldset>
  <fieldset>
    <legend>Invite friends</legend>
    <label
      for="friend_1"
    >
      Friend Address
      <strong><abbr title="required">*</abbr></strong>
      <input
        type="text"
        name="friend_1"
        id="friend_1"
        placeholder="Enter your name"
      >
    </label>

    <label
      for="friend_2"
    >
      Friend Address
      <strong><abbr title="required">*</abbr></strong>
      <input
        type="text"
        name="friend_2"
        id="friend_2"
        placeholder="Enter your name"
      >
    </label>

    <label
      for="friend_3"
    >
      Friend Address
      <strong><abbr title="required">*</abbr></strong>
      <input
        type="text"
        name="friend_3"
        id="friend_3"
        placeholder="Enter your name"
      >
    </label>

    <label
      for="friend_4"
    >
      Friend Address
      <strong><abbr title="required">*</abbr></strong>
      <input
        type="text"
        name="friend_4"
        id="friend_4"
        placeholder="Enter your name"
      >
    </label>

    <label
      for="friend_5"
    >
      Friend Address
      <strong><abbr title="required">*</abbr></strong>
      <input
        type="text"
        name="friend_5"
        id="friend_5"
        placeholder="Enter your name"
      >
    </label>
  </fieldset>
  <button type="submit">
    Create Game!
  </button>
</form>
